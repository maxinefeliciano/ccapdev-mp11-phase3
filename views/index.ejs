<body>
    <div class="container">
        <form class="form" id="login" action="/login" method="POST">
            <img class="logo" src="/static/images/testlogo.png">
            <h1 class="title ">Login</h1>
            <div class="input-group">
                <input type="text" class="input" autofocus placeholder="Username" name="username" required>
            </div>
            <div class="input-group">
                <input type="password" class="input" autofocus placeholder="Password" name="password" required>
            </div>
            <button class="button" type="submit">Login</button><br/><br/>
            <p class="text">
                <a  class="link" href="/signUp">Sign Up</a>
            </p>
        </form>
    </div>
